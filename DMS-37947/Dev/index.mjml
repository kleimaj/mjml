<mjml>
  <mj-head>
    <mj-title>Plain Green</mj-title>
    <mj-breakpoint width="420px" />

    <mj-attributes>
      <mj-text padding="0px 0px 0px 0px" align="center" color="#000000" font-family="Calibri,'Source Sans Pro',sans-serif" font-size="16px" />
      <mj-image padding="0px 0px 0px 0px" />
      <mj-table padding="0px 0px 0px 0px" line-height="0px" font-family="Calibri,'Source Sans Pro',sans-serif" font-size="16px" />
    </mj-attributes>
    <mj-style inline="inline">
      a[x-apple-data-detectors] {
        color: inherit !important;
        text-decoration: none !important;
        font-size: inherit !important;
        font-family: inherit !important;
        font-weight: inherit !important;
        line-height: inherit !important;
      }

      a[href^=tel] {
        color: #000000;
        text-decoration: none;
      }

      a {
        color: #000000;
      }

      a:hover {
        text-decoration: underline !important;
      }

      a:visited {
        color: #E1261C !important;
      }

      p {
        margin: 5px 0px 10px 0px;
        line-height: 24px;

      }

      .hide-on-desktop-outlook * {
        mso-padding-alt: 0px !important;
        mso-hide: all !important;
      }

      .hide-on-desktop {
        display: none !important;
        height: 0px !important;
        mso-hide: all !important;
      }
    </mj-style>
    <mj-style>
      @media screen and (max-width:400px) {

        u+* .gmail-log-in-here {
          font-size: 13px !important;
        }

        u+* .gmail-heading-text {
          font-size: 25px !important;
          font-weight: 800 !important;

        }

        u+* .gmail-body-text {
          font-size: 13px !important;
          font-weight: 500 !important;
        }

        .show-on-mobile {
          display: inherit !important;
          height: inherit !important;
        }

        u+* .gmail-mobile-hero-text {
          font-size: 28px !important;
          line-height: 32px !important;
          padding-top: 20px !important;
        }

        u+* .mobile-hero-text-2 {
          font-size: 28px !important;
          line-height: 38px !important;
          padding-top: 30px !important;
        }

        .cta {
          padding: 0 10px !important;
        }

        .cta-header {
          font-size: 48px !important;
        }

        .cta-subheader {
          font-size: 30px !important;
          line-height: 30px !important;
        }

        .mobile-center {
          text-align: center !important;
        }

        .main-sec td {
          padding: 10px !important
        }

        .main-col {
          padding: 10px 0 10px 0 !important;
        }

      }
    </mj-style>
    <mj-raw>
      <meta name="color-scheme" content="light dark">
      <meta name="supported-color-schemes" content="light dark">
      <mj-style type="text/css">
        [office365] img {
          display: block !important;
        }

        @import url(http://fonts.googleapis.com/css?family=Raleway);

        [style*="Raleway"] {
          font-family: 'Calibri,'Source Sans Pro',sans-serif;

        }

        html,
        body {
          -webkit-text-size-adjust: none;
        }

        [style*="Muli"] {
          font-family: Calibri, sans-serif !important;
        }
      </mj-style>


